<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CF2D2D"
    tools:context="com.example.sahin.enyakinkangrubu.AnaSayfa">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/ustlogo"
        />
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:id="@+id/bmenuarama"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/menuarama"
            />
        <Button
            android:id="@+id/bmenubagis"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/menubagis"
            />
        <Button
            android:id="@+id/bmenuchat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/menuchat"
            />
        <Button
            android:id="@+id/bmenuayarlar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/menuayarlar"
            />

    </LinearLayout>


<ScrollView
    android:id="@+id/scrl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/menu"
    android:layout_marginTop="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:id="@+id/bkanariyorum"
        android:layout_width="202dp"
        android:layout_height="66dp"

        android:layout_centerHorizontal="true"

        android:textAllCaps="false"

        android:background="@drawable/anasayfakanariyorum"
        />

    <Button
        android:id="@+id/bkanbagisliyorum"
        android:textAllCaps="false"
        android:layout_width="202dp"
        android:layout_height="66dp"
        android:layout_below="@+id/bkanariyorum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:background="@drawable/anasayfabagisciyim"/>
    <Button
        android:layout_width="202dp"
        android:layout_height="66dp"
        android:id="@+id/bmesajlarim"
        android:layout_below="@id/bkanbagisliyorum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/anasayfamesajlarim"/>

    <Button
        android:layout_width="202dp"
        android:layout_height="66dp"
        android:id="@+id/bayarlarim"
        android:layout_below="@id/bmesajlarim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/anasayfaayarlarim"/>
    <Button
        android:layout_width="240dp"
        android:layout_height="66dp"
        android:id="@+id/buygulamahakkinda"
        android:layout_below="@id/bayarlarim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/uygulamahakkinda"/>



</RelativeLayout>
</ScrollView>


</RelativeLayout>
